<div class='col-md-6 col-md-offset-3'>
<h2>Register New User</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal center"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , :class => "form-control input-lg", :id => "exampleInputEmail1", :placeholder => "Enter email"%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-lg", :id => "inputPassword", :placeholder => "Enter Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , :class => "form-control input-lg", :id => "inputPasswordConfirmation", :placeholder => "Enter Password Confirmation" %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.attachinary_file_field :pic %>
  </div>

  <div class="actions button-wrapper">
    <%= f.submit "Sign up", class: "btn btn-lg btn-default btn-primary" %>
    <a href="#" class="btn btn-lg btn-default" data-dismiss="modal">Cancel</a>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>